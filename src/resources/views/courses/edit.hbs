<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input value="{{course.name}}" type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label> <br>
            <textarea class="form-control" name="description" id="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input value="{{course.videoId}}" type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input value="{{course.level}}" type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật hoàn tất</button>
    </form>
</div>